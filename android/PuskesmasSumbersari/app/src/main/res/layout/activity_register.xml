<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHint"
    tools:context="com.example.puskesmassumbersari.ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/dinkes" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="22dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Puskesmas Sumbersari"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="14pt" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="-25dp"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Kecamatan Sumbersari - Jember"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="7pt" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Registrasi Pasien"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="20dp" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiIndexPasien"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView3"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true"

                                >

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtIndexPasien"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Index Pasien : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiNIK"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiIndexPasien"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true"
                                tools:ignore="UnknownId">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtNIK"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="NIK : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiNIK"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtNama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nama : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiKepalaKeluarga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiNama"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtKepalaKeluarga"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Kepala Keluarga : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiAlamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiKepalaKeluarga"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtAlamat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Alamat : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiNoTelp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiAlamat"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtNoTelp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nomor Telepon : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiTglLahir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiNoTelp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">


                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txtTglLahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                                    android:hint="Tanggal Lahir (Thn-Bln-Hr) : "
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />


                            </android.support.design.widget.TextInputLayout>


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiAgama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiTglLahir"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"

                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerAgama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiPendidikan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiAgama"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerPendidikan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiJenisKelamin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiPendidikan"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerJenisKelamin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiGolDarah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiJenisKelamin"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerGolDarah"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/validasiPekerjaan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiGolDarah"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                app:errorEnabled="true">

                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerPekerjaan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/colorAccent" />

                            </android.support.design.widget.TextInputLayout>

                            <ProgressBar
                                android:id="@+id/loading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="30dp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btnRegister"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validasiPekerjaan"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="28dp"
                                android:text="Daftar"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

